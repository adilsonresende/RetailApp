<Window
    x:Class="RetailApp.DesktopUI.Register.SupplierEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RetailApp.DesktopUI.Register"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SupplierEdit"
    Width="auto"
    Height="auto"
    FontSize="14"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Name="grdPrincipal" DataContext="SupplierViewModel">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label
            x:Name="lblComercialName"
            Grid.Row="0"
            Width="auto"
            Height="80"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="LightBlue"
            Content="{Binding ComercialName, Mode=TwoWay}"
            FontSize="20"
            FontWeight="SemiBold" />
        <StackPanel
            x:Name="stpSuplierData1"
            Grid.Row="1"
            Orientation="Horizontal">
            <Label
                Name="lblCNPJ"
                Width="80"
                Height="25px"
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Content="CNPJ:" />
            <TextBox
                Name="txtCNPJ"
                Width="150px"
                Height="25px"
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding CNPJ, Mode=TwoWay}" />
            <Label
                Name="lblName"
                Width="80"
                Height="25px"
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Content="Fantasia:" />
            <TextBox
                Name="txtName"
                Width="420"
                Height="25px"
                Margin="10,10"
                VerticalAlignment="Center"
                Text="{Binding Name, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel
            x:Name="stpSuplierData2"
            Grid.Row="2"
            Orientation="Horizontal">
            <Label
                Name="lblIE"
                Width="80"
                Height="25px"
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Content="IE:" />
            <TextBox
                Name="txtIE"
                Width="150px"
                Height="25px"
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding IE, Mode=TwoWay}" />
            <Label
                Name="lblST"
                Width="80"
                Height="25px"
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Content="IEST:" />
            <TextBox
                Name="txtIEST"
                Width="150px"
                Height="25px"
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding IEST, Mode=TwoWay}" />
            <Label
                Name="lblCRT"
                Width="80"
                Height="25px"
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Right"
                Content="CRT:" />
            <TextBox
                Name="txtCRT"
                Width="150px"
                Height="25px"
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding IEST, Mode=TwoWay}" />
        </StackPanel>
        <DataGrid
            Name="dtgAdress"
            Grid.Row="3"
            Width="800"
            Height="100"
            Margin="10" />
        <DataGrid
            Name="dtgPhone"
            Grid.Row="4"
            Width="800"
            Height="100"
            Margin="10" />
        <StackPanel
            Name="stpActions"
            Grid.Row="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="btnSave"
                Width="80"
                Height="25"
                Margin="10"
                Content="Salvar" />
            <Button
                x:Name="btnCancel"
                Width="80"
                Height="25"
                Margin="10"
                Content="Cancelar" />
        </StackPanel>
    </Grid>

</Window>
